<div id="header-wrapper" class="clearfix">
    <!-- .top-bar start -->
    <section id="top-bar-wrapper">
        <div id="top-bar" class="clearfix">
            <ul class="contact-info">
                <li>
                    <i class="icon-phone"></i>
                    <span>+216 23 576 220</span>
                </li>

                <li>
                    <i class="icon-envelope-alt"></i>
                    <span><a href="mailto:info@business.com">info@lnet.tn</a></span>
                </li>
            </ul><!-- .contact-info end -->


            <!--- .social-links start -->
            <ul class="social-links">
                {%  if app.user %}

                    <li>
                    <a href="{{ path('fos_user_security_logout') }}" title="logout">{{ app.user.username }}</a>
                </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}" title="login"><i class="icon-user"></i></a>
                        </li>
                {% endif %}
                <li>
                    <a href="#" class="pixons-twitter-1"></a>
                </li>
                <li>
                    <a href="#" class="pixons-github-2"></a>
                </li>

                <li>
                    <a href="#" class="pixons-facebook-2"></a>
                </li>

                <li>
                    <a href="#" class="pixons-google_plus"></a>
                </li>
            </ul><!-- .social-links end -->
        </div><!-- .top-bar end -->
    </section><!-- .top-bar-wrapper end -->

    <!-- #header start -->
    <header id="header" class="clearfix">
        <section id="logo">
            <a href="{{ path('home') }}">
                <img src="{{ asset('bundles/app/img/logo_lnet_interactive.png') }}" title="elvyre html5 template" alt="elvyre professional corporate template"/>
            </a>
        </section>

        <section id="nav-container">
            <nav id="nav">
                <ul>
                    <li {% if app.request.get('_route') == 'home' %} class="current-menu-item" {% endif %}>
                        <a href="{{ path('home') }}">
                            <i class="icon-home">
                            </i>&nbsp;Home
                        </a>
                    </li>
                    <li {% if app.request.get('_route') == 'map' %} class="current-menu-item" {% endif %}>
                        <a href="{{ path('map') }}">
                            <i class="icon-location">
                            </i>&nbsp;MAP
                        </a>
                    </li>

                    <li {% if app.request.get('_route') == 'statistics' %} class="current-menu-item" {% endif %}>
                        <a href="{{ path('statistics') }}">
                            <i class="icon-stats">
                            </i>&nbsp;STATISTICS
                        </a>
                    </li>

                    <li {% if app.request.get('_route') == 'sonata_news_archive' %} class="current-menu-item" {% endif %}>
                        <a href="{{ path('sonata_news_archive') }}">
                            <i class="icon-blog">
                            </i>&nbsp;BLOG
                        </a>
                    </li>

                    <li {% if app.request.get('_route') == 'contact' %} class="current-menu-item" {% endif %}>
                        <a href="{{ path('contact') }}">
                            <i class="icon-envelope-alt">
                            </i>&nbsp;CONTACT
                        </a>
                    </li>
                </ul>
            </nav><!-- #nav end -->
        </section><!-- #nav-container end -->

        <!-- #dl-menu.dl-menuwrapper start -->
        <div id="dl-menu" class='dl-menuwrapper'>
            <button class="dl-trigger">Open Menu</button>
            <ul class="dl-menu">
                <li>
                    <a href="{{ path('home') }}">Home</a>
                </li>
                <li>

                <li><a href="{{ path('home') }}">Map</a></li>

                </li>

                <li>

                <li><a href="{{ path('home') }}">STATISTICS</a></li>

                </li>


                <li>
                    <a href="{{ path('home') }}">Blog</a>
                </li>

                <li><a href="{{ path('home') }}">Contact</a></li>
            </ul><!-- .dl-menu end -->
        </div><!-- #dl-menu.dl-menuwrapper end -->

        <!-- #search-box start -->
        <section id="search">
            <form action="#" method="get">
                <input class="search-submit" type="submit" />
                <input id="m_search" name="s" type="text" placeholder="Type and hit enter..." />
            </form>
        </section><!-- #search-box end -->
    </header><!-- .header end -->
</div>
